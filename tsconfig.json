    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": false,
        "module": "ES6",
        "target": "ES3",
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "sourceMap": true,
